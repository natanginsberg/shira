<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/end_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_background"
    tools:context=".SingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appColor"
        android:layout_margin="7dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="@dimen/no_hardcode_dimension"
            android:layout_height="@dimen/no_hardcode_dimension"
            android:layout_margin="15dp"
            android:background="@drawable/ic_baseline_close_24"
            android:onClick="returnToSong"
            app:layout_constraintDimensionRatio=".7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/congrats_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.103" />

        <TextView
            android:id="@+id/congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/good_job"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/congrats_guide" />

        <TextView
            android:id="@+id/share_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/share_question"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/congrats" />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/share"
            android:layout_width="@dimen/no_hardcode_dimension"
            android:layout_height="@dimen/no_hardcode_dimension"
            android:layout_weight="1"
            android:background="@drawable/share_background"
            app:layout_constraintDimensionRatio="4.67"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/share_question"
            app:layout_constraintWidth_percent="0.76">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:onClick="share"
                android:text="@string/share"
                android:textColor="@color/purple_hover"
                android:textSize="24sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/no_hardcode_dimension"
            android:layout_height="@dimen/no_hardcode_dimension"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/share"
            app:layout_constraintWidth_percent="0.625">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/no_hardcode_dimension"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/try_again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:onClick="playAgain"
                    android:text="@string/sing_again"
                    android:textColor="@color/sing_up_hover"
                    android:textSize="17sp" />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/replay"
                    android:onClick="playAgain"
                    android:rotation="200"
                    android:scaleY="-1" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/no_hardcode_dimension"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/playback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:onClick="playback"
                    android:text="@string/playback"
                    android:textColor="@color/sing_up_hover"
                    android:textSize="17sp" />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignLeft="@id/circle"
                    android:layout_alignRight="@id/circle"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_caret_forward_outline"
                    android:layoutDirection="ltr"
                    android:onClick="playback" />

                <ImageButton
                    android:id="@+id/circle"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_ellipse_outline"
                    android:onClick="playback" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/no_hardcode_dimension"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:onClick="returnToMain"
                    android:text="@string/home"
                    android:textColor="@color/sing_up_hover"
                    android:textSize="17sp" />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/home_button"
                    android:onClick="returnToMain" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/no_hardcode_dimension"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_download_outline"
                    android:onClick="saveRecordingToTheCloud" />

                <TextView
                    android:id="@+id/save_recording"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:onClick="saveRecordingToTheCloud"
                    android:text="@string/save_recording"
                    android:textColor="@color/sing_up_hover"
                    android:textSize="17sp" />
            </RelativeLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>