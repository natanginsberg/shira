<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appColor"
    android:id="@+id/share_save">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/you_re_recording_was_saved_do_you_want_to_share_it"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="27dp"
        android:gravity="center"
        android:id="@+id/share_question"
        android:textColor="@android:color/white"/>

    <RelativeLayout
        android:id="@+id/share"
        android:layout_width="@dimen/no_hardcode_dimension"
        android:layout_height="@dimen/no_hardcode_dimension"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/share_background"
        android:onClick="saveAndShare"
        app:layout_constraintDimensionRatio="4.67"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share_question"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.76">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:onClick="saveAndShare"
            android:text="@string/share"
            android:textColor="@color/purple_hover"
            android:textSize="24sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/playback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="closeShareOptions"
        android:text="@string/no_thank_you"
        android:textColor="@color/sing_up_hover"
        app:layout_constraintTop_toBottomOf="@id/share"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="17sp" />


</androidx.constraintlayout.widget.ConstraintLayout>