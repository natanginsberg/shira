<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sing_song"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColor"
    android:keepScreenOn="true"
    tools:context="com.function.karaoke.hardware.SingActivity">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_hardcode_dimension"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/ic_baseline_close_24"
            android:onClick="returnToMain" />

        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/open_end_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="7dp"
            android:background="@drawable/skinny_rec"
            android:elevation="10dp"
            android:onClick="openEndOptions"
            android:text="@string/done"
            android:textColor="@android:color/white"
            android:visibility="invisible" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        app:layout_constraintTop_toBottomOf="@id/header">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:progressDrawable="@drawable/horizontal_progress_bar" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_hardcode_dimension"
        android:layout_below="@id/progress_bar_layout"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@color/appColor"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_bar_layout">

        <RelativeLayout
            android:id="@+id/words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.42">

            <ImageView
                android:id="@+id/album_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/word_space"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/no_hardcode_dimension"
                    android:background="@color/transparent_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/lyrics_guide1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.33" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/lyrics_guide2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.66" />


                    <!--                <TextView-->
                    <!--                    android:id="@+id/words_read"-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="match_parent"-->
                    <!--                    android:layout_weight="1"-->
                    <!--                    android:gravity="center"-->
                    <!--                    android:textSize="24sp"-->
                    <!--                    tools:ignore="NestedWeights" />-->


                    <com.function.karaoke.core.views.LyricsView
                        android:id="@+id/lyrics"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/no_hardcode_dimension"
                        android:gravity="center"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toTopOf="@+id/lyrics_guide1"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <com.function.karaoke.core.views.LyricsView
                        android:id="@+id/words_to_read"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/no_hardcode_dimension"
                        android:gravity="center"
                        android:textSize="20sp"
                        app:layout_constraintTop_toTopOf="@+id/lyrics_guide1"
                        app:layout_constraintBottom_toTopOf="@id/lyrics_guide2"/>

                    <com.function.karaoke.core.views.LyricsView
                        android:id="@+id/words_to_read_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/no_hardcode_dimension"
                        android:gravity="center"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lyrics_guide2" />

                    <com.function.karaoke.core.views.LyricsView
                        android:id="@+id/words_to_read_3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/no_hardcode_dimension"
                        android:gravity="center"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:elevation="10dp"
                        android:fontFamily="monospace"
                        android:padding="1dp"
                        android:textColor="@color/default_text_color"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/song_and_artist_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/song_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/default_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/artist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/default_text_color"
                    android:textSize="15sp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/black">

            <TextureView
                android:id="@+id/surface_camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />


            <Button
                android:id="@+id/pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:background="@drawable/pause_button"
                android:onClick="pauseSong"
                android:visibility="invisible" />

            <Button
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:background="@drawable/play_arrow"
                android:onClick="resumeSong"
                android:visibility="invisible" />

            <include
                android:id="@+id/logo"
                layout="@layout/logo_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:elevation="10dp"
                android:visibility="invisible" />


        </RelativeLayout>
    </LinearLayout>




    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/camera_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/no_hardcode_dimension"
        android:checked="true"
        android:layout_marginTop="15dp"
        android:thumb="@drawable/ic_video_camera_foreground"
        app:layout_constraintHeight_percent="0.04"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/play_button" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/no_hardcode_dimension"
        android:layout_centerInParent="true"
        android:background="@color/appColor"
        android:onClick="playMusic"
        android:text="@string/play"
        android:textColor="@color/default_text_color"
        android:visibility="invisible"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/playButtonGuide" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/playButtonGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.56" />

</androidx.constraintlayout.widget.ConstraintLayout>
