<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#70D8E8"
                android:startColor="#807DF8" />
            <corners android:radius="30dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/bottom_menu_color"
                android:startColor="@color/top_menu_color" />
            <corners android:radius="30dp" />
        </shape>
    </item>


</layer-list>
