<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#2D9DD2"
                android:centerY="1.0"
                android:endColor="#2D9DD2"
                android:startColor="#2D9DD2" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#B15EC2"
                    android:centerY="1.0"
                    android:endColor="#B15EC2"
                    android:startColor="#B15EC2" />
            </shape>
        </clip>
    </item>
</layer-list>